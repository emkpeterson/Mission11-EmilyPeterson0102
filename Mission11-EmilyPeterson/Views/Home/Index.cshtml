@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<h1>Hilton's Online Bookstore'</h1>

    @foreach (Book b in Model.Books)
    {
        <h3>@b.Title</h3>
        <ul>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.ISBN</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Number of Pages @b.PageCount</li>
            <li>Price: @b.Price</li>
        </ul>
    }

<div page-model="@Model.PaginationBooks" page-action="Index"></div>

